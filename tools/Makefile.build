srecdir := include/srec
src := $(obj)
srcdepend := $(src)/.depend

# Init all relevant variables used in kbuild files so
# 1) they have correct type
# 2) they do not inherit any value from the environment
obj-y :=
asm-y :=
srec-y :=
srecobj :=
objects :=
assembly :=
source :=
targets :=
subdir-y :=
EXTRA_AFLAGS   :=
EXTRA_CFLAGS   :=
EXTRA_LDFLAGS  :=
asflags-y  :=
ccflags-y  :=
ldflags-y  :=

-include $(src)/Makefile
include tools/Kbuild.include

# The filename Kbuild has precedence over Makefile

subdir-y := $(addprefix $(src)/, $(patsubst %/,%, $(filter %/,$(obj-y))))
obj-y := $(filter-out %/,$(obj-y))

objects := $(addprefix $(src)/, $(obj-y) $(asm-y:%.s=%.o))
assembly := $(addprefix $(src)/, $(obj-y:%.o=%.s))
source := $(addprefix $(src)/, $(obj-y:%.o=%.c))
# srecobj := $(srec-y)
srecobj := $(addprefix $(srecdir)/, $(srec-y))
srecdep := $(foreach dep, $(srec-y), $(addprefix $(src)/, $($(dep))) )

PHONY := __build

__build: $(assembly) $(objects) $(srcdepend) $(subdir-y) $(srecobj)
$(assembly): %.s: %.c 
	$(Q)wcc $(CFLAGS) -S -N -I./include/posix_include -I./include -o $@ $<
ifeq ($(KBUILD_VERBOSE),0)
	@echo "CC \t $<"
endif

$(objects): %.o: %.s
	$(Q)wasm $< -o $@
ifeq ($(KBUILD_VERBOSE),0)
	@echo "AS \t $<"
endif

$(srcdepend): $(source) $(includes)
	$(Q)makedepend -o.s -f- -I./include/posix_include -I./include $(source) > $(srcdepend)

$(subdir-y): FORCE
	$(Q)$(MAKE) $(build)=$@

# todo https://stackoverflow.com/questions/45156678/makefile-pattern-in-prerequisite-variable
$(srecobj): $(srecdep)
	$(eval $@_SRC := $(addprefix $(src)/,$($(notdir $@):.o=.c)))
	$(eval $@_OBJ := $(addprefix $(src)/,$($(notdir $@))))
	$(eval $@_FILE := $(notdir $(@:.srec=)))
	# @echo $($@_SRC) "|" $($@_OBJ) "|" $@ "|" $($@) "|" $^
	$(Q)wlink -Ttext 2048 -v -o $(srecdir)/$(notdir $@) $($@_OBJ) $(shell $(get_libs) $($@_SRC)) > $(srecdir)/$($@_FILE).verbose
ifeq ($(KBUILD_VERBOSE),0)
	@echo "LD \t $($@_FILE).srec"
endif


FORCE:

.DELETE_ON_ERROR:
-include $(src)/.depend



